
<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= campground.name%></h1>
        <div style="width: 30%; margin: 25px auto">

            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" rows="4" cols="50" placeholder= "Comment here"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block"  type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Go Back</a>
        </div>

    </div>
</div>

<% include ../partials/footer%>